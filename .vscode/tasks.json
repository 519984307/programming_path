{
  "tasks": [
    {
      "type": "shell",
      "label": "gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-lcurl",
        "-lpthread",
        "-I/home/cc/ffmpeg/install/include",
        "-L/home/cc/ffmpeg/install/lib",        
        "-lavformat",
        "-lavdevice",
        "-lavfilter",
        "-lavcodec",                  
        "-lavutil",
        "-lswresample",
        "-lswscale",
        "-lm",
        "-lz",
        "-lpthread",
        "-lrt"
      ],
      "options": {
        "cwd": "/usr/bin"
      }
    }
  ],
  "version": "2.0.0"
}